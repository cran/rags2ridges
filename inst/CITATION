citHeader("To cite the rags2ridges package in publications please use:")

citEntry(entry="Manual",
    title = "rags2ridges: Ridge Estimation of Precision Matrices from High-Dimensional Data",
    author = personList(as.person("C.F.W. Peeters"), as.person("W.N. van Wieringen")),
    year = substring(packageDescription("rags2ridges")$Date,1,4),
    note = paste("R package version", packageDescription("rags2ridges")$Version),
    textVersion =
      paste("Peeters, C.F.W. and van Wieringen, W.N. (",
        substring(packageDescription("rags2ridges")$Date,1,4),
        ") rags2ridges: Ridge Estimation of Precision Matrices from High-Dimensional Data. ",
        "R package, version ", packageDescription("rags2ridges")$Version,
        ".", sep = "")
)

citEntry(entry="Article",
    title = "Ridge Estimation of Inverse Covariance Matrices from High-Dimensional Data",
    author = personList(as.person("W.N. van Wieringen"),
        as.person("C.F.W. Peeters")),
    journal = "arXiv:1403.0904 [stat.ME]",
    volume = "", 
    number = "", 
    pages =  "",
    year = 2014,
    textVersion =
      paste("van Wieringen, W.N. and Peeters, C.F.W. (2014). ",
		"Ridge Estimation of Inverse Covariance Matrices from High-Dimensional Data. ", 
        	"arXiv:1403.0904 [stat.ME].", sep = "")
)
